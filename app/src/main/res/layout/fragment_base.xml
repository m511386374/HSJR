<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="66px"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="20px"
        android:gravity="center"
        >
        <View
            android:id="@+id/lift_line"
            android:layout_width="90px"
            android:layout_height="3px"
            android:background="@color/home_text_color"
            android:layout_toRightOf="@+id/home_viewper_title"
            >
        </View>
        <TextView
            android:id="@+id/home_viewper_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:textColor="@color/home_text_color"
            android:text="周周升"
            android:layout_toEndOf="@+id/righ_line" />

        <View
            android:id="@+id/right_line"
            android:layout_width="90px"
            android:layout_height="3px"
            android:background="@color/home_text_color"
            android:layout_toStartOf="@+id/lift_line">
        </View>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30px"
        android:gravity="center_horizontal"
        >

        <TextView
        android:id="@+id/home_lift_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/home_text_color"
        android:textSize="86px"
        android:text="9.9"
        />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/home_text_color"
        android:textSize="36px"
        android:text="%"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/home_text_color"
            android:textSize="86px"
            android:text="～"
            />
        <TextView
            android:id="@+id/home_rigth_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/home_text_color"
            android:textSize="86px"
            android:text="9.9"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/home_text_color"
            android:textSize="36px"
            android:text="%"
            />

    </LinearLayout>

    <TextView
        android:layout_marginTop="10px"
        android:layout_marginBottom="10px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="预期年化利率"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10px"
                android:text="500元"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新手福利"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10px"
                android:textColor="@color/black"
                android:text="500元"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新手福利"
                />
        </LinearLayout>


    </LinearLayout>



</LinearLayout>